<?xml version="1.0" encoding="UTF-8"?>
<!-- coordinate are based on 720i:  1280w 720h-->
<imageControlTest
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://kodi.tv/xbmcgui/xsd/1.0/skin file:///c:/dev/Kodi/xbmcgui-xsd/xsd/1.0/skin.xsd"
    xmlns="http://kodi.tv/xbmcgui/xsd/1.0/skin" xmlns:addon="http://kodi.tv/xbmcgui/xsd/1.0/addon"
>
    <description>My first image control</description>
    <posx>80</posx>
    <posy>60</posy>
    <width>250</width>
    <height>200</height>
    <visible>true</visible>
    <colordiffuse>FFFFFFFF</colordiffuse>
    <fadetime>200</fadetime>
    <texture border="5" flipy="true" flipx="false">mytexture.png</texture>
    <bordertexture border="5">mybordertexture.png</bordertexture>
    <bordersize>5</bordersize>
    <texture>$INFO[MusicPlayer.Cover]</texture>
    <aspectratio>keep</aspectratio>

</imageControlTest>